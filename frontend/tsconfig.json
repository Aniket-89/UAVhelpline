{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Bundler",           // Changed from "Node" to "Bundler" for better Vite compatibility
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "/",                          // Changed from "src" to "." for proper path resolution
      "paths": {
        "@/*": ["./src/*"]                     // Updated path alias to match Vite's convention
      },
      "jsx": "react-jsx",
      "lib": ["dom", "esnext"],
      "skipDefaultLibCheck": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "downlevelIteration": true,
      "isolatedModules": true,
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "dist"
    ]
  }